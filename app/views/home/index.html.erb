<!-- app/views/home/index.html.erb -->
<h1 class="page-header">Spotify Demo</h1>
<hr>
<%= form_tag artists_path, method: "get", html: { class: "form" } do %>
  <div class="form-group col-lg-6 d-flex p-2">
    <%= text_field_tag(:artist_name, "", placeholder: "Enter artist name", class: "m-2") %>
    <%= submit_tag "Search", class: "btn btn-primary m-2" %>
  </div>
  
<% end %>